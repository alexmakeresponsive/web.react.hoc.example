body
  font-family: 'Noto Sans'
  font-weight: 200
  font-size 14px
  color #555

.text-center
  text-align: center

html, body, #root, .content
  height: 100%

#root
  padding: 30px 0px
  box-sizing: border-box

html, body
  margin: 0

h1, h2, h3, p, button
  margin: 0

input, textarea
  box-sizing border-box

button:hover
  cursor pointer

.container
  max-width 1140px



.App
  display: block

  .titleComponent
    display: block
    text-align: center
    margin-bottom: 30px

  .title
    display: block
    //text-align: center

  input
    width: 100%
    box-sizing border-box
    margin: 0

  textarea
    width: 100%
    box-sizing border-box
    margin: 0
    resize none

  label
    display: block
    margin-bottom: 5px

  button
    margin: 0
  button:focus
    outline none
  button:hover
    //cursor url(/assets/icons/down-arrow-2-25.png) 10 10, auto
    cursor: pointer

.primary-1
  background-color: #3f51b5
  color #fff

.primary-2
  background-color: #2196f3
  color #fff

.img
  width: 100%
.imgWr
  display: block
  overflow: hidden
